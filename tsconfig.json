{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"useUnknownInCatchVariables": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "build",
		"rootDir": "node"
	},
	"include": [
		"node"
	],
	"exclude": [
		"node_modules"
	]
}
